<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="2dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardCornerRadius="4dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            android:background="#ffffff"
            >

            <ImageView
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:id="@+id/flora_photo"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/flora_name"
                android:layout_toRightOf="@+id/flora_photo"
                android:layout_toLeftOf="@+id/setting"
                android:layout_alignParentTop="true"
                android:text="Species1 :DDDDDDDdsaa"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flora_genus"
                android:text="Genus :12312dasdsadsadsa"
                android:layout_toRightOf="@+id/flora_photo"
                android:layout_below="@+id/flora_name"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/setting"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setting"
                android:src="@drawable/ic_more_vert_black_18dp"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>