<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main_menu"
    tools:context="com.example.manotien.myapplication.MainMenuActivity">

    <TextView android:text="Flora of Thailand" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/start"
        android:id="@+id/button"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Discover"
        android:textSize="20dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/export"
        android:id="@+id/export"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/button"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export Database"
        android:textSize="20dp"
        android:layout_below="@+id/export"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/upload"
        android:id="@+id/upload"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/export"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Data"
        android:textSize="20dp"
        android:layout_below="@+id/upload"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
