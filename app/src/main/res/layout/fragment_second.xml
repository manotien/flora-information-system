<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.manotien.myapplication.second">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="5dp"
        android:id="@+id/general_form"
        android:fillViewport="true"
        android:isScrollContainer="true"
        >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="80dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Family: "
            android:id="@+id/family"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="21dp"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/family"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/habittxt"
            >
            <AutoCompleteTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:id="@+id/habit"
                android:hint="Habit" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/habittxt"
            android:layout_below="@+id/family"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/heighttxt"
            >
            <EditText android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="7"
                android:hint="Height (cm.)" />
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:id="@+id/head"
            android:layout_below="@+id/heighttxt"
            android:background="#000000"></View>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Bark"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/head"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:id="@+id/bark"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bark_layout"
            android:layout_below="@+id/bark">

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/outertxt"
                >
                <EditText android:id="@+id/outeredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:hint="Outer" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/outertxt">
                <EditText
                    android:id="@+id/out_thicknessedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:hint="Thickness (cm.)"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Color"
                android:id="@+id/outer_bark_color_but"
                android:layout_marginLeft="20dp"

                android:layout_below="@+id/outertxt"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/outer_bark_color_but"
                android:layout_marginTop="15dp"
                android:id="@+id/color_bark_txt"
                android:text="Color: "
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:layout_below="@+id/outertxt"
                />
            <ImageView
                android:layout_height="40dp"
                android:layout_width="60dp"
                android:layout_toRightOf="@+id/color_bark_txt"
                android:layout_below="@+id/outertxt"
                android:id="@+id/bark_color"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                 />
            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/outer_bark_color_but"
                android:id="@+id/inner_txt"
                android:layout_marginLeft="20dp"
                >
                <EditText android:id="@+id/inneredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:hint="Inner" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/outer_bark_color_but"
                android:layout_toRightOf="@+id/inner_txt"
                android:layout_marginLeft="20dp"
                android:id="@+id/in_thicknesstxt">
                <EditText android:id="@+id/in_thicknessedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:hint="Thickness (cm.)" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Color"
                android:id="@+id/inner_bark__color_but"
                android:layout_below="@+id/inner_txt"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color: "
                android:id="@+id/innercolortxt"
                android:layout_below="@+id/inner_txt"
                android:layout_toRightOf="@+id/inner_bark__color_but"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/innercolortxt"
                android:id="@+id/saptxt"
                android:layout_marginLeft="20dp"
                >
                <EditText android:id="@+id/sapedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:hint="Sap" />
            </android.support.design.widget.TextInputLayout>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/innercolortxt"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/saptxt"
                android:id="@+id/spinner"></Spinner>
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"
            android:id="@+id/onleave"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/bark_layout"
            android:background="#000000"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onleave"
            android:id="@+id/leavetxt"
            android:text="Leaves"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upper: "
            android:layout_below="@+id/leavetxt"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:id="@+id/uppertxt"
            android:layout_marginLeft="20dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/upperradio"
            android:layout_below="@+id/leavetxt"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/uppertxt"
            android:layout_marginLeft="5dp"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shine"
                android:textSize="12dp"
                android:checked="false"
                android:id="@+id/uppershine"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matte"
                android:checked="false"
                android:textSize="12dp"
                android:id="@+id/uppermatte"
                />

        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lower: "
            android:layout_below="@+id/uppertxt"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:id="@+id/lowertxt"
            android:layout_marginLeft="20dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/lowerradio"
            android:layout_below="@+id/uppertxt"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/lowertxt"
            android:layout_marginLeft="5dp"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shine"
                android:textSize="12dp"
                android:checked="false"
                android:id="@+id/lowershine"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matte"
                android:checked="false"
                android:textSize="12dp"
                android:id="@+id/lowermatte"
                />

        </RadioGroup>
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/lowertxt"
            android:id="@+id/lbftxt"
            android:layout_marginLeft="20dp"
            >
            <EditText android:id="@+id/lbfedit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:hint="Leaves Before Fall" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbftxt"
            android:layout_marginRight="20dp"
            android:id="@+id/yltxt"
            android:layout_marginLeft="20dp"
            >
            <EditText android:id="@+id/yledit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:hint="Young Leaves" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yltxt"
            android:id="@+id/scenttxt"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >
            <EditText android:id="@+id/scentedit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:hint="Scent" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:id="@+id/onflower"
            android:layout_below="@+id/scenttxt"
            android:background="#000000"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flowers"
            android:textSize="20dp"
            android:id="@+id/flowertxt"
            android:layout_below="@+id/onflower"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flowertxt"
            android:id="@+id/sepaltxt"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >
            <EditText android:id="@+id/sepaledit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:hint="Sepals" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sepaltxt"
            android:id="@+id/detaltxt"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >
            <EditText android:id="@+id/detaledit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:hint="Detals" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detaltxt"
            android:id="@+id/tepaltxt"
            android:layout_marginLeft="20dp"
            >
            <EditText android:id="@+id/tepaledit"
                android:layout_width="fill_parent"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:ems="8"
                android:hint="Tepals" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/tepaltxt"
            android:id="@+id/stamentxt"
            android:layout_marginLeft="20dp"
            >
            <EditText android:id="@+id/stamenedit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:hint="Stamens" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/stamentxt"
            android:id="@+id/pistiltxt"
            android:layout_marginLeft="20dp"
            >
            <EditText android:id="@+id/pistiledit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:hint="Pistils" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pistiltxt"
            android:layout_marginRight="20dp"
            android:id="@+id/flowerscenttxt"
            android:layout_marginLeft="20dp"
            >
            <EditText android:id="@+id/flowerscentedit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:hint="Scent" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:id="@+id/onfruit"
            android:layout_below="@+id/flowerscenttxt"
            android:background="#000000"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruits"
            android:textSize="20dp"
            android:id="@+id/fruittxt"
            android:layout_below="@+id/onfruit"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/fruittxt"
            android:id="@+id/maturetxt"
            android:layout_marginLeft="20dp"
            >
            <EditText android:id="@+id/matureedit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:hint="Mature" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maturetxt"
            android:layout_marginRight="20dp"
            android:id="@+id/ripentxt"
            android:layout_marginLeft="20dp"
            >
            <EditText android:id="@+id/ripenedit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:hint="Ripen" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ripentxt"
            android:layout_marginRight="20dp"
            android:id="@+id/fruitscenttxt"
            android:layout_marginLeft="20dp"
            >
            <EditText android:id="@+id/fruitscentedit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:hint="Scent" />
        </android.support.design.widget.TextInputLayout>


    </RelativeLayout>
    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/x_form"
        android:fillViewport="true"
        android:isScrollContainer="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="80dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Family: "
            android:id="@+id/family_2"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"/>

    </RelativeLayout>
</ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/y_form"
        android:fillViewport="true"
        android:layout_below="@+id/family"
        android:layout_marginTop="30dp"
        android:isScrollContainer="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingBottom="80dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAA"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
